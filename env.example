# ðŸ”§ AgentryLab Telegram Bot - Environment Configuration

# Bot Configuration (REQUIRED)
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# AgentryLab Configuration (REQUIRED)
# AgentryLab is now installed from PyPI (v0.1.6+)
# No need to set AGENTRYLAB_PATH

# OpenAI API Key (REQUIRED for GPT models)
OPENAI_API_KEY=your_openai_api_key_here
# Optional OpenAI organization id if your account needs it
OPENAI_ORGANIZATION=

# Optional: Override packaged presets with your own directory
AGENTRYLAB_PRESETS_PATH=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/bot.log

# Deployment Mode
POLLING=true
WEBHOOK_URL=
WEBHOOK_PORT=8443

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379

# Optional: Database Configuration
DATABASE_URL=sqlite:///app/data/bot.db
